<title>Weather</title>
<%- include('head'); %>
<link rel="stylesheet" href="css/style.css">

<body class="fonts container-lg" style="background-color:#271724;color: #FEEBFA;">
    <%- include('nav'); %>
    <section class="container">
        <% if(valid) {%>
            <div class="row">
                <% out.forEach(function(elem){  %>
                <div class="col-6 text-center">
                    <h3><%= elem.name %></h3>
                    <img src="<%= elem.icon %>" class="rounded row text-center" alt="">
                    <p class="row text-center"><%= elem.temperature %><%= elem.temperatureUnit %></p>
                    <p class="row"><%= elem.windSpeed %><%= elem.windDirection %></p>
                </div>
                <% }); %>
            </div>
        <% }else{ %>
            <div>
                <h2>You have inputed an invalid Longitude and Latitude</h2>
                <a href="weatherform" class="btn">Return</a>
            </div>
        <% }%>
    </section>
    <script type="text/javascript" src="./js/basic.js"></script>
</body>
